package ${package}.${moduleName}.${entityNameLowercase}.executor;

import com.baomidou.mybatisplus.core.conditions.update.LambdaUpdateWrapper;
import ${package}.${moduleName}.dto.${entityClassName}UpdateCmd;
import ${package}.${moduleName}.${entityNameLowercase}.${entityClassName}DO;
import ${package}.${moduleName}.${entityNameLowercase}.${entityClassName}DbService;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.BeanUtils;
import org.springframework.stereotype.Component;

import javax.annotation.Resource;

/**
 * ${entityClassName}UpdateCmdExe
 *
 * @author DifferentW  nsmeng3@163.com
 */

@Component
public class ${entityClassName}UpdateCmdExe {
    private static final Logger log = LoggerFactory.getLogger(${entityClassName}UpdateCmdExe.class);

    @Resource
    private ${entityClassName}DbService ${entityName}DbService;

    public void execute(${entityClassName}UpdateCmd cmd) {
        ${entityClassName}DO ${entityName}DO = new ${entityClassName}DO();
        BeanUtils.copyProperties(cmd, ${entityName}DO);
        LambdaUpdateWrapper<${entityClassName}DO> updateWrapper = new LambdaUpdateWrapper<>();
        updateWrapper.eq(${entityClassName}DO::getId, cmd.getId());
        ${entityName}DbService.update(${entityName}DO, updateWrapper);
    }
}

